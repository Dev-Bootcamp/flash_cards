<div class="container">
  <h1><%= (@user.email.gsub(/(@.+)/,'')).capitalize %>'s History</h1>
  
  <h4>Your Scores</h4>

  <table>
    <tr>
      <th>Game</th>
      <th>Deck</th>
      <th>Score</th>
    </tr>
    <% @user.rounds.each do |round| %>
      <tr>
        <td><%= round.id %></td>
        <td><%= round.deck.name %></td>
        <td><%= round.score %></td>
      </tr>
    <% end %>
  </table>

  <p><a href="/user/<%= @user.id %>">Your page</a></p>

  <p><a href="/logout">Logout</a></p>
</div>

