<div class="container">
  <h1>Create New User</h1>
  
  <form action="/user/:id" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="user[name]" id="name" placeholder="enter your name"><br>
    <label for="email">Email:</label>
    <input type="text" name="user[email]" id="email" placeholder="email"><br>
    <label>Password:<input type="password" name="user[password]" id="password" placeholder="password"></label><br>
    <input type="submit" value="create user">
  </form>

  <p><a href ="/">cancel</a></p>
</div>
